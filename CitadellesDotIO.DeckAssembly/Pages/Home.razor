@page "/"
@using CitadellesDotIO.Engine.DTOs.Cards
@using CitadellesDotIO.Engine.Factories

<CitadellesDotIO.DeckAssembly.Components.PickPoolComponent PickHandLowerThreshold=0
                                           PickHandUpperThreshold=default
                                           PickPool=BuildItems() />

@code {
    private int pickHandLowerThreshold = 0;
    private int pickHandUpperThreshold = default;
    private int pickPoolSize = 5;

    private List<Card> BuildItems()
    {
        return CharactersDtoFactory.VanillaCharactersList().Select((c, i) => new CharacterCard(i, c) as Card).ToList();

        //return Enumerable.Range(1, pickPoolSize).Select(x => new Card(x)).ToList();
    }
}
